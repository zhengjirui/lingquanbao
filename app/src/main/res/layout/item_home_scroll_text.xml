<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kuaibao_l"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >

    <View
        android:id="@+id/kuaibao_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:background="@mipmap/kuaibao"
        android:layout_marginRight="10dp"
        />

    <View
        android:id="@+id/kuaibao_rewen"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_alignTop="@+id/kuaibao_icon"
        android:layout_toRightOf="@+id/kuaibao_icon"
        android:background="@mipmap/rewen"
        />

    <View
        android:id="@+id/kuaibao_reping"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_toRightOf="@+id/kuaibao_icon"
        android:layout_alignBottom="@+id/kuaibao_icon"
        android:background="@mipmap/reping"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/kuaibao_reping"
        >

        <LinearLayout
            android:id="@+id/kuaibao_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <include layout="@layout/kuaibao_context_item"/>

            <include layout="@layout/kuaibao_context_item"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
